{% extends 'partials/base.html.twig' %}

{% block content %}

    <div class="go-article">
        <h2 class="article-title">
            <span class="border-bottom border-r-0">SITE UNDERR MAINTENANCE</span>
        </h2>
        <div class="article-content">
            {{ page.content|default('PLUGIN_MAINTENANCE.OFFLINE_MARKDOWN'|t|markdown|raw) }}

            {% if maintenance.allow_login and not grav.user.authenticated %}
                <div id="maintenance-login">
                    {% include 'partials/login-form.html.twig' with {
                        content: 'PLUGIN_MAINTENANCE.AUTHORIZED_ACCESS'|t|markdown,
                        show_login_form: true
                    } %}
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
