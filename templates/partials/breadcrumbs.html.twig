{% set crumbs = breadcrumbs.get() %}
{% set breadcrumbs_config = config.plugins.breadcrumbs %}

{% if crumbs|length > 1 or breadcrumbs_config.show_all %}
    <nav class="go-breadcrumb"
        data-a="{{base_url}}"
        data-b="{{base_url_absolute}}"
        data-c="{{base_url_relative}}"
        itemscope="itemscope" itemtype="https://schema.org/BreadcrumbList">
        {% set i = 0 %}

        {% for crumb in crumbs %}
            {% set crumb_name %}
                <span itemprop="name">{{ crumb.menu }}</span>
            {% endset %}

            {% if loop.first and breadcrumbs_config.include_home %}
                {% set i = -1 %}

                <span class="breadcrumb-item">
                    <a href="{{ crumb.url }}">
                        <span>
                            {% if breadcrumbs_config.icon_home %}
                                <i class="i-home"></i>
                            {% else %}
                                {{ crumb.menu }}
                            {% endif %}
                        </span>
                    </a>
                </span>
            {% else %}
                <span class="breadcrumb-item" itemprop="itemListElement" itemscope="itemscope"
                    itemtype="https://schema.org/ListItem">

                    {# When grav installed in subdirectory base_url, base_url_absolute and breadcrumbs.get().url contain this subdirectory path #}
                    {% if base_url_relative in crumb.url %}
                        {% set crumbl_full_url = base_url_absolute ~ crumb.url|replace({base_url_relative:''}) %}
                    {% else %}
                        {% set crumbl_full_url = base_url ~ crumb.url %}
                    {% endif %}

                    {% if not loop.last %}
                        {% if crumb.routable %}
                            <a href="{{ crumb.url }}" itemid="{{ crumbl_full_url }}"
                                itemprop="item" itemscope="itemscope" itemtype="https://schema.org/Thing">
                                {{ crumb_name }}
                            </a>
                        {% else %}
                            {{ crumb_name }}
                        {% endif %}

                        <meta content="{{ loop.index + i }}" itemprop="position">
                    {% else %}
                        {% if breadcrumbs_config.link_trailing %}
                            <a href="{{ crumb.url }}"
                                itemid="{{ crumbl_full_url }}"
                                itemprop="item" itemscope="itemscope" itemtype="https://schema.org/Thing">
                                {{ crumb_name }}
                            </a>
                        {% else %}
                            <span itemid="{{ crumbl_full_url }}"
                                itemprop="item" itemscope="itemscope" itemtype="https://schema.org/Thing">
                                {{ crumb_name }}
                            </span>
                        {% endif %}

                        <meta content="{{ loop.index + i }}" itemprop="position">
                    {% endif %}
                </span>
            {% endif %}
        {% endfor %}
    </nav>
{% endif %}
